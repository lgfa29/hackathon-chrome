{
  "name": "James",
  "version": "0.0.6",
  "manifest_version": 2,

  "description": "__MSG_extDescription__",
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "default_locale": "en",

  "browser_action": {
    "default_icon": {
      "19": "img/icon_enabled.png"
    },
    "default_title": "James",
    "default_popup": "html/popup.html"
  },
  
  "background": {
    "persistent": true,
    "scripts": [
      "js/lib/guid.js",
      "js/james.js",
      "js/background.js"
    ]
  },
  "minimum_chrome_version": "23",
  
  "permissions": ["notifications", "storage"]
}